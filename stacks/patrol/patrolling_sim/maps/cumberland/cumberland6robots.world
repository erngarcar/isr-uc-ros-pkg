define hokuyo laser(
  	range_max 2.0
  	fov 270.25
  	samples 1081  
  	
  	size [ 0.33 0.33 0.025 ]

	block(
		points 16
		point[0] [ 0.225 0.000 ]
		point[1] [ 0.208 0.086 ]
		point[2] [ 0.159 0.159 ]
		point[3] [ 0.086 0.208 ]
		point[4] [ 0.000 0.225 ]
		point[5] [ -0.086 0.208 ]
		point[6] [ -0.159 0.159 ]
		point[7] [ -0.208 0.086 ]
		point[8] [ -0.225 0.000 ]
		point[9] [ -0.208 -0.086 ]
		point[10] [ -0.159 -0.159 ]
		point[11] [ -0.086 -0.208 ]
		point[12] [ -0.000 -0.225 ]
		point[13] [ 0.086 -0.208 ]
		point[14] [ 0.159 -0.159 ]
		point[15] [ 0.208 -0.086 ]
		color "gray40"
	)

)

define robot position(
  	size [0.33 0.33 0.075]

  	# This block approximates a circular shape of a Robot
  	block
	( 
    	points 16
    	point[0] [ 0.225 0.000 ]
    	point[1] [ 0.208 0.086 ]
    	point[2] [ 0.159 0.159 ]
    	point[3] [ 0.086 0.208 ]
    	point[4] [ 0.000 0.225 ]
    	point[5] [ -0.086 0.208 ]
    	point[6] [ -0.159 0.159 ]
    	point[7] [ -0.208 0.086 ]
    	point[8] [ -0.225 0.000 ]
    	point[9] [ -0.208 -0.086 ]
    	point[10] [ -0.159 -0.159 ]
    	point[11] [ -0.086 -0.208 ]
    	point[12] [ -0.000 -0.225 ]
    	point[13] [ 0.086 -0.208 ]
    	point[14] [ 0.159 -0.159 ]
   	point[15] [ 0.208 -0.086 ]
        
	color "gray50"
  	)
 	
  	hokuyo( pose [0 0 0 0] )
  	color "gray50"
)

window( 
  size [ 800 700 1] 		# Tamanho da janela em pixeis
  rotate [ 0.000 0.000 ]	# Mapa não rodado
  center [ 25.8 18.7125]	# Centro da Janela no ponto central do ambiente (em metros)
  scale 15 			# zoom da janela
  show_data 1   

)

define floorplan model (
  	# Sombre, sensible, artistic
  	color "gray30"

	# Most maps will need a bounding box
	boundary 1

	gui_nose 0
	gui_grid 0
	gui_move 0
	gui_outline 0
	gripper_return 0
	fiducial_return 0
	laser_return 1
)

# load an environment bitmap
floorplan (

  size [51.6 37.425  1]	#metros (a imagem tem 688x499pixeis => 0.075 resolução no .yaml)
  pose [25.8 18.7125 0 0]
  bitmap "cumberland.pgm"
)

