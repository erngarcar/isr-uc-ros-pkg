<launch>
  <master auto="start"/>

  <!-- Parameter with Initial Position Estimate [x0, y0, x1, y1, ...] -->
   <rosparam param="initial_pos">[49.875, 11.325, 2.325, 21.675, 22.8, 21.975, 26.25, 18.525]</rosparam>


  <!-- BEGIN ROBOT 0 -->
  <group ns="robot_0">

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find patrolling_sim)/maps/cumberland/cumberland.yaml"/>

  <!--- Run AMCL -->
  <include file="$(find patrolling_sim)/params/amcl/cumberland_4robots/amcl_diff_robot0.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find patrolling_sim)/params/amcl/cumberland_4robots/costmap_common_params_robot0.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find patrolling_sim)/params/amcl/cumberland_4robots/costmap_common_params_robot0.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find patrolling_sim)/params/amcl/cumberland_4robots/local_costmap_params_robot0.yaml" command="load" />
    <rosparam file="$(find patrolling_sim)/params/amcl/cumberland_4robots/global_costmap_params_robot0.yaml" command="load" />
    <rosparam file="$(find patrolling_sim)/params/amcl/base_local_planner_params.yaml" command="load" />
  </node>

  </group>


